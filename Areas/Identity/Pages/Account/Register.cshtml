@page
@model RegisterModel
@{
    ViewData["Title"] = "Rekisteröidy";
}

<div class="row" style="background-color:white;">
    <div class="col col-sm-3 col-lg-4 col-md-3"></div>
    <div class="col-md-6 col-sm-6 center text-center" style="background-color:white;">
        <img src="~/img/apoa.png" style="" alt="" class="img-fluid">
        <form style="margin-bottom:20px;" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Luo uusi käyttäjätunnus</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                
                <input asp-for="Input.Email" class="form-control" placeholder="Sähköpostiosoite"/>
                <!-- <span asp-validation-for="Input.Email" class="text-danger"></span> -->
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Salasana"/>
                <!-- <span asp-validation-for="Input.Password" class="text-danger"></span> -->
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Salasana uudelleen"/>
                <!-- <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span> -->
            </div>
            <button type="submit" class="btn btn-primary w-100">Rekisteröidy</button>
        </form>

        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Unohtuiko salasanasi?</a>
            </p>

            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Kirjaudu sisään</a>
            </p>
        </div>
    </div>
    <div class="col col-sm-3 col-lg-4 col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
        html body {
            height:100%
        }

        body {
            background-color:rgb(86, 79, 163);
        }

        .center {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
</style>
