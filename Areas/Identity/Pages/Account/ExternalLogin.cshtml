@page
@model ExternalLoginModel

<h1>Rekisteröityminen</h1>
<h4>Liitä @Model.LoginProvider tili.</h4>
<hr />

<p class="text-info">
    Olet kirjautunut käyttäen <strong>@Model.LoginProvider</strong> tiliä.
    Ole hyvä ja viimeistele rekisteröinti alla olevasta painikkeesta.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" readonly/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Rekisteröidy</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
